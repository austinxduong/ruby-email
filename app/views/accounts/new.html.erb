<h1>Create New Account</h1>

<%= form_with model: @account do |form| %>
    <div>
        <%= form.label :firstname %><br>
        <%= form.text_field :firstname %>
    </div>

    <div>
        <%= form.label :lastname %><br>
        <%= form.text_field :lastname %>
    </div>

    <div>
    <%= form.label :username %><br>
    <%= form.text_field :username %><br>
    <% @account.errors.full_messages_for(:username).each do |message| %>
        <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.label :email %><br>
    <%= form.text_field :email %><br>
    <% @account.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
    <% end %>
</div>


    <div>
        <%= form.submit %>
    </div>
<% end %>

